{
  "openapi": "3.0.0",
  "info": {
    "title": "Kanban Todo API",
    "version": "1.0.0",
    "description": "API for a Kanban-style Todo application"
  },
  "servers": [
    {
      "url": "http://localhost:8080"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "Todo": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "userId": { "type": "integer" },
          "content": { "type": "string" },
          "done": { "type": "boolean" },
          "column": {
            "type": "integer",
            "description": "0: todo, 1: doing, 2: done"
          },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "TodoCreate": {
        "type": "object",
        "required": ["content"],
        "properties": {
          "content": { "type": "string" },
          "column": {
            "type": "integer",
            "description": "0: todo, 1: doing, 2: done",
            "default": 0
          }
        }
      },
      "TodoUpdate": {
        "type": "object",
        "properties": {
          "content": { "type": "string" },
          "done": { "type": "boolean" },
          "column": {
            "type": "integer",
            "description": "0: todo, 1: doing, 2: done"
          }
        }
      }
    }
  },
  "security": [{ "bearerAuth": [] }],
  "paths": {
    "/todo": {
      "get": {
        "summary": "Get all todos for the authenticated user",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "List of todos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Todo" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new todo",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/TodoCreate" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Todo created",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "integer" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/todo/{id}": {
      "get": {
        "summary": "Get a todo by ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Todo found",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Todo" }
              }
            }
          },
          "404": { "description": "Todo not found" }
        }
      },
      "put": {
        "summary": "Update a todo (full)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["content", "done"],
                "properties": {
                  "content": { "type": "string" },
                  "done": { "type": "boolean" },
                  "column": {
                    "type": "integer",
                    "description": "0: todo, 1: doing, 2: done"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Todo updated" },
          "404": { "description": "Todo not found" }
        }
      },
      "patch": {
        "summary": "Update a todo (partial)",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/TodoUpdate" }
            }
          }
        },
        "responses": {
          "200": { "description": "Todo updated" },
          "404": { "description": "Todo not found" }
        }
      },
      "delete": {
        "summary": "Delete a todo",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": { "description": "Todo deleted" },
          "404": { "description": "Todo not found" }
        }
      }
    }
  }
}
